<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Anibadi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:forceDarkAllowed" >false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditText" parent="Theme.Anibadi">
        <item name="android:inputType">textPersonName</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:paddingVertical" >4dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>